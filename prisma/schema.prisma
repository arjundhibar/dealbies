generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-1.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("NEON_NEON_DATABASE_URL")
}

model User {
  id         String      @id @default(uuid())
  email      String      @unique
  username   String      @unique
  password   String?
  avatarUrl  String?     @map("avatar_url")
  createdAt  DateTime    @default(now()) @map("created_at")
  updatedAt  DateTime    @default(now()) @map("updated_at")
  role       Role        @default(USER)
  comments   Comment[]
  coupons    Coupon[]
  deals      Deal[]
  savedDeals SavedDeal[]
  votes      Vote[]

  @@map("users")
}

model Deal {
  id            String      @id @default(uuid())
  title         String
  slug          String      @unique
  description   String
  price         Decimal     @db.Decimal(10, 2)
  originalPrice Decimal?    @map("original_price") @db.Decimal(10, 2)
  merchant      String
  category      String
  dealUrl       String      @map("deal_url")
  expired       Boolean     @default(false)
  expiresAt     DateTime?   @map("expires_at")
  startAt       DateTime?   @map("start_at")
  discountCode  String?     @map("discount_code")
  availability  Availability?
  postageCosts  Decimal?    @map("postage_costs") @db.Decimal(10, 2)
  shippingFrom  String?     @map("shipping_from")
  userId        String      @map("user_id")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @default(now()) @map("updated_at")
  comments      Comment[]
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  savedDeals    SavedDeal[]
  votes         Vote[]
  images        DealImage[] @relation("DealToImages")

  @@map("deals")
}

model DealImage {
  id        String   @id @default(uuid())
  url       String
  cloudflareUrl String? // Actual Cloudflare URL for redirect
  isCover   Boolean  @default(false)
  dealId    String   @map("deal_id")
  deal      Deal     @relation("DealToImages", fields: [dealId], references: [id], onDelete: Cascade)
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  @@map("deal_images")
}

model Coupon {
  id            String      @id @default(uuid())
  title         String
  slug          String      @unique
  description   String
  merchant      String?
  discountCode  String      @map("discount_code")
  discountType  String      @map("discount_type") // percentage, euro, freeShipping, none
  discountValue Decimal?    @map("discount_value") @db.Decimal(10, 2)
  availability  Availability
  couponUrl     String      @map("coupon_url")
  expired       Boolean     @default(false)
  expiresAt     DateTime?   @map("expires_at")
  startAt       DateTime?   @map("start_at")
  category      String
  userId        String      @map("user_id")
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @default(now()) @map("updated_at")
  comments      Comment[]
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes         Vote[]
  images        CouponImage[] @relation("CouponToImages")

  @@map("coupons")
}

model CouponImage {
  id        String   @id @default(uuid())
  url       String
  cloudflareUrl String? // Actual Cloudflare URL for redirect
  isCover   Boolean  @default(false)
  couponId  String   @map("coupon_id")
  coupon    Coupon   @relation("CouponToImages", fields: [couponId], references: [id], onDelete: Cascade)
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  @@map("coupon_images")
}

model Comment {
  id        String    @id @default(uuid())
  content   String
  userId    String    @map("user_id")
  dealId    String?   @map("deal_id")
  couponId  String?   @map("coupon_id")
  parentId  String?   @map("parent_id")
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @map("updated_at")
  coupon    Coupon?   @relation(fields: [couponId], references: [id], onDelete: Cascade)
  deal      Deal?     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  parent    Comment?  @relation("CommentToComment", fields: [parentId], references: [id], onDelete: Cascade)
  replies   Comment[] @relation("CommentToComment")
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes     Vote[]

  @@map("comments")
}

model Vote {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  dealId    String?  @map("deal_id")
  couponId  String?  @map("coupon_id")
  commentId String?  @map("comment_id")
  voteType  String   @map("vote_type")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @map("updated_at")
  comment   Comment? @relation(fields: [commentId], references: [id], onDelete: Cascade)
  coupon    Coupon?  @relation(fields: [couponId], references: [id], onDelete: Cascade)
  deal      Deal?    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dealId, couponId, commentId])
  @@map("votes")
}

model SavedDeal {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  dealId    String   @map("deal_id")
  createdAt DateTime @default(now()) @map("created_at")
  deal      Deal     @relation(fields: [dealId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, dealId])
  @@map("saved_deals")
}

enum Role {
  USER
  ADMIN
}

enum Availability {
  ONLINE
  OFFLINE
}
